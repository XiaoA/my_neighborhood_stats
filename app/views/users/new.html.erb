<div class="well">
  <%= form_for @user do |f| %>
    <%= render 'errors', obj: @user %>
    <div class="control-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="control-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

        <div class="control-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit %>
  <% end %>
</div>
